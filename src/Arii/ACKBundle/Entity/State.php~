<?php

namespace Arii\ACKBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

use Symfony\Component\Validator\Constraints as Assert;
use JMS\Serializer\Annotation as Serializer;

/**
 * State
 *
 * @ORM\Table(name="ARII_STATE")
 * @ORM\Entity(repositoryClass="Arii\ACKBundle\Entity\StateRepository")
 * 
 */
class State
{
    public function __construct()
    {
        $this->alarmTime = new \DateTime();
        $this->stateTime = new \DateTime();
    }
    
    /**
     * @var integer
     *
     * @ORM\Column(name="id", type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="AUTO")
     * 
     * @Serializer\Groups({"list","detail"})
     */
    private $id;
   
    /**
     * @var string
     *
     * @ORM\Column(name="name", type="string", length=64)
     */
    private $name;

    /**
     * @var string
     *
     * @ORM\Column(name="title", type="string", length=64)
     */
    private $title;
    
    /**
     * @var string
     *
     * @ORM\Column(name="description", type="string", length=255, nullable=true)
     * 
     * @Serializer\Groups({"detail"})
     */
    private $description;

    /**
     * @var string
     *
     * @ORM\Column(name="host", type="string", length=64)
     */
    private $host;

    /**
     * @var string
     *
     * @ORM\Column(name="container", type="string", length=64)
     */
    private $container;
    
    /**
     * @var string
     *
     * @ORM\Column(name="job", type="string", length=64)
     */
    private $job;

    /**
     * @var string
     *
     * @ORM\Column(name="status", type="string", length=24)
     */
    private $status;
    
    /**
     * @var integer
     *
     * @ORM\Column(name="obj_type", type="string", length=3, nullable=true )
     */
    private $objType;

    /**
     * @var integer
     *
     * @ORM\Column(name="obj_error", type="boolean" )
     */
    private $objError=0;
    
    /**
     * @var integer
     *
     * @ORM\Column(name="obj_warn", type="boolean" )
     */
    private $objWarn=0;

    /**
     * @var integer
     *
     * @ORM\Column(name="warn_message", type="boolean" )
     */
    private $warnMessage=0;

    /**
     * @var integer
     *
     * @ORM\Column(name="obj_stop", type="boolean" )
     */
    private $objStop=0;

    /**
     * @var integer
     *
     * @ORM\Column(name="stop_message", type="boolean" )
     */
    private $stopMessage=0;
    
    /**
     * @var integer
     *
     * @ORM\Column(name="obj_ack", type="boolean" )
     */
    private $objAck=0;

    /**
     * @var integer
     *
     * @ORM\Column(name="ack_message", type="boolean" )
     */
    private $ackMessage=0;
    
}
