{% extends "AriiCoreBundle::base.html.twig" %}
{% block dhtmlx %}
<link rel="stylesheet" type="text/css" href="{{ asset('dhtmlx/skins/terrace/dhtmlx.css') }}" />
<script src="{{ asset('dhtmlx/codebase/dhtmlx.js') }}" type="text/javascript"></script>
{% endblock dhtmlx %}
{% block dhtmlx_plus %}
{% endblock dhtmlx_plus %}
{% block onload %}
<script language="javascript">
var menurefresh;
dhtmlxEvent(window,"load",function(){
    AriiLayout('API','help',300);
    globalLayout.cells("a").setText("{{ "Menu" | trans }}");
    globalLayout.cells("a").showHeader();
 
    mySidebar = globalLayout.cells("a").attachSidebar({
        icons_path: "{{ asset('/bundles/') }}",
        width: 300,
        template: "tiles",
        items:
        [
            { id:"core",   text: "{{ "summary.Core" | trans }}",     icon: "ariicore/icon_32.png" },
            { id:"api",    text: "{{ "summary.API"  | trans }}",     icon: "ariiapi/icon_32.png" },
            { id:"ats",    text: "{{ "summary.ATS"  | trans }}",     icon: "ariiats/icon_32.png" },
            { id:"jid",    text: "{{ "summary.JID"  | trans }}",     icon: "ariijid/icon_32.png" },
            { id:"joc",    text: "{{ "summary.JOC"  | trans }}",     icon: "ariijoc/icon_32.png" },
            { id:"time",   text: "{{ "summary.Time" | trans }}",     icon: "ariitime/icon_32.png" },
            
        ]
    });
    mySidebar.attachEvent("onBubbleClick", function(id, value){        
        // bubble clicked, your code here
        // 'return true' means item allowed to be selected
        // false - otherwise
        return true;
    });    
    mySidebar.attachEvent("onSelect", function(id, value){
        globalLayout.cells("b").setText("{{ "id" | trans }}");
        globalLayout.cells("b").attachURL("{{ url('html_Home_swagger') }}?bundle="+id);
        return true;
    });
    mySidebar.setSizes();
    Init();
});
</script>
{% endblock onload %}
{% block body %}{% endblock%}
{% block script %}
<script language="javascript">
</script>
{% include "AriiCoreBundle:Common:ribbon.js.twig" %}
{% endblock script %}

            