    <div>
        <canvas id="canvas"></canvas>
    </div>
<script>
        var barChartData = {
            labels: ["January", "February", "March", "April", "May", "June", "July"],
            datasets: [
			{
                label: 'T',
                backgroundColor: "red",
                stack: '2017',
                data: [
                    1,
                    2,
                    3
                ]
            }, {
                label: 'B',
                backgroundColor: "green",
                stack: '217',
                data: [
