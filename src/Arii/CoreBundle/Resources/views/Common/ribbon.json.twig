{% if ACTIVATED.history %}
    ,
    {
        "type":"block", 
        "id": "run_window",
        "text": "{{ "History" | trans }}",
        "text_pos": "top", 
        "list":
            [
                {   type: 'group', 
                    position: "right",
                    list:[
                        {   id: "date_now",    "type":"button", "img":"clock.png", "text":"&nbsp{{ INTERFACE.dayPast }}" },
                        {   id: "date_days",   "type":"slider", size: 110, max: 31, value: {{ INTERFACE.dayPast*-1 }}  }
                    ]
                },
                {   type: 'group', 
                    position: "right",
                    list:[
                        {   id: "date_start_change", "type":"button", "img":"clock_play.png", disable: true },
                        {   id: "date_start",        "type":"input",  value: "{{ INTERFACE.past | date('Y-m-d H:i:s') }}", width: 130  }
                    ]
                },
                {   type: 'group', 
                    list:[
                        {   id: "date_end_change",   "type":"button", "img":"clock_stop.png", disable: true },
                        {   id: "date_end",          "type":"input",  value: "{{ INTERFACE.refDate | date('Y-m-d H:i:s') }}", width: 130  }
                    ]
                }
            ]
    }
