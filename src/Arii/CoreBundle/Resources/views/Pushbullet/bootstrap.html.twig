{% extends "AriiCoreBundle::doc.html.twig" %}
{% block head %}
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}">
<!-- Optional theme -->
<link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap-theme.min.css') }}">
<!-- Latest compiled and minified JavaScript -->
<!-- <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script> -->
{% endblock %} 
{% block body %}
<body>
<div class="container-fluid">
<div class="container-fluid">
<div class="jumbotron">
<img style="float: right;" src="{{ User.image_url }}"/>
<h1>{{ User.name }}</h1>
{% if User.active == 1 %}<button type="button" class="btn btn-success">Actif</button>
{% else %}    
<button type="button" class="btn btn-danger">Inactif</button>
{% endif %}
<table class="table table-striped table-bordered table-condensed">
<tr><th class="col-md-2">{{ "Mail" | trans }}</th><td class="col-md-8">{{ User.email }}</td></tr>
<tr><th class="col-md-2">{{ "Iden" | trans }}</th><td class="col-md-8">{{ User.iden }}</td></tr>
<tr><th class="col-md-2">{{ "Max. Upload" | trans }}</th><td class="col-md-8">{{ User.max_upload_size }}</td></tr>
</table>
</div>    
{% for Device in Devices %}
<h1>{{ Device.nickname }}</h1>
{% if Device.active == 1 %}<button type="button" class="btn btn-success">Actif</button>
{% else %}    
<button type="button" class="btn btn-danger">Inactif</button>
{% endif %}
{% if Device.pushable == 1 %}
<button type="button" class="btn btn-success">Push</button>
{% endif %}
{% if Device.has_sms is defined and Device.has_sms == 1 %}
<button type="button" class="btn btn-success">SMS</button>
{% endif %}
{% if Device.has_mms is defined and Device.has_mms == 1 %}
<button type="button" class="btn btn-success">MMS</button>
{% endif %}
{% if Device.remote_files is defined and Device.remote_files == 'enabled' %}
<button type="button" class="btn btn-success">{{ "Remote files " | trans }}</button>
{% endif %}
<blockquote> 
<table class="table table-striped table-bordered table-condensed"> 
<tr><th class="col-md-2">{{ "Type" | trans }}</th><td class="col-md-8">{{ Device.icon }}</td></tr>
<tr><th class="col-md-2">{{ "Manufacturer" | trans }}</th><td class="col-md-8">{{ Device.manufacturer }}</td></tr>
<tr><th class="col-md-2">{{ "Model" | trans }}</th><td class="col-md-8">{{ Device.model }}</td></tr>
<tr><th class="col-md-2">{{ "Iden" | trans }}</th><td class="col-md-8">{{ Device.iden }}</td></tr>
{% if Device.fingerprint is defined %}
<tr><th class="col-md-2">{{ "Fingerprint" | trans }}</th><td class="col-md-8">{{ Device.fingerprint }}</td></tr>
{% endif %}
{% if Device.push_token is defined %}
<tr><th class="col-md-2">{{ "Push Token" | trans }}</th><td class="col-md-8">{{ Device.push_token }}</td></tr>
{% endif %}
</table>
</blockquote>    
{% endfor %}
</div>    
</body>
{% endblock %}
