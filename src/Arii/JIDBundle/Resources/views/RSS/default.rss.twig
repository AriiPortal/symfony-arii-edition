<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
    <channel>
        <title>{{ "Job failures" | trans }}</title>
        <description>{{ "Last jobs failed" | trans }}</description>
        <link>{{ url( 'arii_JID_history' ) }}</link>
        <lastBuildDate>{{ "now" |date('Y-m-d H:i:s') }}</lastBuildDate>
        {% for info in Infos %}
        <item>
            <title>[{{ info.spooler }}]/{{ info.name }} (exit {{ info.exit }})</title>
            <guid>{{ info.id }}</guid>
            <description>{{ info.status }}</description>
            <pubDate>{{ info.end}}</pubDate>
            <category>{{ info.spooler }}</category>
            <link/>
        </item>
        {% endfor %}
    </channel>
</rss>