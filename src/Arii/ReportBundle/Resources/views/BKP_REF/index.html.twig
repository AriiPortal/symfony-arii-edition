{% extends '::base.html.twig' %}

{% block body -%}
    <h1>BKP_REF list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Db_env</th>
                <th>Db_type</th>
                <th>Db_system</th>
                <th>Db_name</th>
                <th>Db_instance</th>
                <th>Db_group</th>
                <th>Path_source</th>
                <th>Path_destination</th>
                <th>Deleted</th>
                <th>Sinked</th>
                <th>Updated</th>
                <th>Db_desc</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bkp_ref_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.dbenv }}</td>
                <td>{{ entity.dbtype }}</td>
                <td>{{ entity.dbsystem }}</td>
                <td>{{ entity.dbname }}</td>
                <td>{{ entity.dbinstance }}</td>
                <td>{{ entity.dbgroup }}</td>
                <td>{{ entity.pathsource }}</td>
                <td>{{ entity.pathdestination }}</td>
                <td>{% if entity.deleted %}{{ entity.deleted|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.sinked %}{{ entity.sinked|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.dbdesc }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('bkp_ref_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('bkp_ref_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('bkp_ref_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
