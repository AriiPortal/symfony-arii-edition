        type:{
            template:"<b>#Dashboard#</b><p>#Description#<br/><i>Version #Version#</i></p>",
            width: size
        }
    });
    view.add({
        Dashboard: "Global",
        Description: "Vue synth√©tique de l'ensemble des traitements",
        Version:"1.0" 
    });

    GlobalRefresh();
};

function GlobalRefresh() {
