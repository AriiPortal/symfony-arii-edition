<toolbar>    
    <item type="buttonSelect" id="APP" text="{{ appl }}" img="bricks.png">
    <item type="button" id="_ALL_" text="{{ "All applications" | trans }}"{% if appl=='*'%} selected="true"{% endif %}/>
    <item type="separator" id="sep1"/>
{% for app,application in Applications %}
    <item type="button" id="{{ app }}" text="{{ application }}"{% if app==appl%} selected="true"{% endif %}/>
{% endfor %}        
    </item>
    <item type="buttonSelect" id="ENV" text="{{ env }}">
        <item type="button" id="P" text="{{ "Production" | trans }}"{% if env=='P' %} selected="true"{% endif %}/>
        <item type="button" id="R" text="{{ "Recette" | trans }}"{% if env=='R' %} selected="true"{% endif %}/>
        <item type="button" id="I" text="{{ "Integration" | trans }}"{% if env=='I' %} selected="true"{% endif %}/>
        <item type="button" id="T" text="{{ "Test" | trans }}"{% if env=='T' %} selected="true"{% endif %}/>
    </item>
    <item type="separator" id="sep2"/>        
    <item type="buttonSelect" id="MONTH" text="{{ month }}" img="calendar.png">
        <item type="button" id="1" text="{{ "month.1" | trans }}"{% if month==1%} selected="true"{% endif %}/>
        <item type="button" id="2" text="{{ "month.2" | trans }}"{% if month==2%} selected="true"{% endif %}/>
        <item type="button" id="3" text="{{ "month.3" | trans }}"{% if month==3%} selected="true"{% endif %}/>
        <item type="button" id="4" text="{{ "month.4" | trans }}"{% if month==4%} selected="true"{% endif %}/>
        <item type="button" id="5" text="{{ "month.5" | trans }}"{% if month==5%} selected="true"{% endif %}/>
        <item type="button" id="6" text="{{ "month.6" | trans }}"{% if month==6%} selected="true"{% endif %}/>
        <item type="button" id="7" text="{{ "month.7" | trans }}"{% if month==7%} selected="true"{% endif %}/>
        <item type="button" id="8" text="{{ "month.8" | trans }}"{% if month==8%} selected="true"{% endif %}/>
        <item type="button" id="9" text="{{ "month.9" | trans }}"{% if month==9%} selected="true"{% endif %}/>
        <item type="button" id="10" text="{{ "month.10" | trans }}"{% if month==10%} selected="true"{% endif %}/>
        <item type="button" id="11" text="{{ "month.11" | trans }}"{% if month==11%} selected="true"{% endif %}/>
        <item type="button" id="12" text="{{ "month.12" | trans }}"{% if month==12%} selected="true"{% endif %}/>
    </item>
    <item type="buttonSelect" id="YEAR" text="{{ year }}" img="">
{% for i in 2000..2030 %}
    <item type="button" id="{{ i }}" text="{{ i }}"{% if i==year%} selected="true"{% endif %}/>
{% endfor %}
    </item>
    <item type="separator" id="sep0"/>
    <item type="buttonSelect" id="DAY_PAST" text="{{ day_past }}" img="timeline.png">
        <item type="button" id="-30" text="1 {{ "Month" | trans }}"{% if day_past==-30%} selected="true"{% endif %}/>
        <item type="button" id="-90" text="3 {{ "Months" | trans }}"{% if day_past==-90%} selected="true"{% endif %}/>
        <item type="button" id="-180" text="6 {{ "Months" | trans }}"{% if day_past==-180%} selected="true"{% endif %}/>
        <item type="button" id="-365" text="1 {{ "Year" | trans }}"{% if day_past==-365%} selected="true"{% endif %}/>
    </item>
<!--
    <item type="separator" id="sep1"/>    
    <item type="button" id="get" title="{{ "Download" | trans }}" img="pdf.png"/>
-->
</toolbar>