<toolbar>    
    <item type="buttonSelect" id="ENV" text="{{ env }}">
        <item type="button" id="eP" text="{{ "Production" | trans }}"{% if env=='P' %} selected="true"{% endif %}>
        </item>
        <item type="button" id="eR" text="{{ "Recette" | trans }}"{% if env=='R' %} selected="true"{% endif %}/>
        <item type="button" id="eI" text="{{ "Integration" | trans }}"{% if env=='I' %} selected="true"{% endif %}/>
        <item type="button" id="eT" text="{{ "Test" | trans }}"{% if env=='T' %} selected="true"{% endif %}/>
    </item>
    <item type="separator" id="sep3"/>
    <item type="buttonSelect" id="CAT" text="{{ category }}" img="category.png">
        {% for cat,apps in Categories %}
            <userdata name="{{ cat }}">{{ apps }}</userdata>
        {% endfor %}
        <item type="button" id="_CAT_" text="{{ category }}"{% if category=='*'%} selected="true"{% endif %}/>
        <item type="separator" id="sep3"/>
        {% for cat,apps in Categories %}
            <item type="button" id="c{{ cat }}" text="{{ cat | trans }}"{% if cat==category%} selected="true"{% endif %}/>
        {% endfor %}
    </item>
    <item type="buttonSelect" id="APP" text="{{ appl }}" img="bricks.png">
    <item type="button" id="_APP_" text="{{ "All applications" | trans }}"{% if app=='*'%} selected="true"{% endif %}/>
    <item type="separator" id="sep1"/>
{% for app,application in Applications %}
    <item type="button" id="a{{ app }}" text="{{ application }}"{% if app==appl%} selected="true"{% endif %}/>
{% endfor %}        
    </item>
    <item type="separator" id="sep0"/>
    <item type="buttonSelect" id="JOB_CLASS" text="{{ job_class }}" img="cog.png">
        <item type="button" id="_JCL_" text="{{ "All types" | trans }}"{% if job_class=='*'%} selected="true"{% endif %}/>
        <item type="separator" id="sep3"/>
        {% for jcl in Classes %}
            {% set jcl_text =  "class." ~ jcl %}
            <item type="button" id="{{ jcl }}" text="{{ jcl_text | trans }}"{% if job_class==jcl%} selected="true"{% endif %}/>
        {% endfor %}        
    </item>
    <item type="separator" id="sep4"/>    
    <item type="buttonSelect" id="DAY" text="{{ day }}" img="calendar_view_day.png">
    {% for i in 1..31 %}
        <item type="button" id="d{{ i }}" text="{{ i }}"{% if day==i %} selected="true"{% endif %}/>
    {% endfor %}
    </item>
    <item type="buttonSelect" id="MONTH" text="{{ month }}">
        <item type="button" id="m1" text="{{ "month.1" | trans }}"{% if month==1%} selected="true"{% endif %}/>
        <item type="button" id="m2" text="{{ "month.2" | trans }}"{% if month==2%} selected="true"{% endif %}/>
        <item type="button" id="m3" text="{{ "month.3" | trans }}"{% if month==3%} selected="true"{% endif %}/>
        <item type="button" id="m4" text="{{ "month.4" | trans }}"{% if month==4%} selected="true"{% endif %}/>
        <item type="button" id="m5" text="{{ "month.5" | trans }}"{% if month==5%} selected="true"{% endif %}/>
        <item type="button" id="m6" text="{{ "month.6" | trans }}"{% if month==6%} selected="true"{% endif %}/>
        <item type="button" id="m7" text="{{ "month.7" | trans }}"{% if month==7%} selected="true"{% endif %}/>
        <item type="button" id="m8" text="{{ "month.8" | trans }}"{% if month==8%} selected="true"{% endif %}/>
        <item type="button" id="m9" text="{{ "month.9" | trans }}"{% if month==9%} selected="true"{% endif %}/>
        <item type="button" id="m10" text="{{ "month.10" | trans }}"{% if month==10%} selected="true"{% endif %}/>
        <item type="button" id="m11" text="{{ "month.11" | trans }}"{% if month==11%} selected="true"{% endif %}/>
        <item type="button" id="m12" text="{{ "month.12" | trans }}"{% if month==12%} selected="true"{% endif %}/>
    </item>
    <item type="buttonSelect" id="YEAR" text="{{ year }}" img="">
{% for i in 2000..2030 %}
    <item type="button" id="{{ i }}" text="{{ i }}"{% if i==year%} selected="true"{% endif %}/>
{% endfor %}
    </item>
    <item type="separator" id="sep6"/>
    <item type="buttonSelect" id="dayPast" text="{{ dayPast }}" img="timeline.png">
        <item type="button" id="-1" text="1 {{ "Day" | trans }}"{% if dayPast==-1%} selected="true"{% endif %}/>
        <item type="button" id="-7" text="1 {{ "Week" | trans }}"{% if dayPast==-7%} selected="true"{% endif %}/>
        <item type="button" id="-30" text="1 {{ "Month" | trans }}"{% if dayPast==-30%} selected="true"{% endif %}/>
        <item type="button" id="-90" text="3 {{ "Months" | trans }}"{% if dayPast==-90%} selected="true"{% endif %}/>
        <item type="button" id="-180" text="6 {{ "Months" | trans }}"{% if dayPast==-180%} selected="true"{% endif %}/>
        <item type="button" id="-365" text="1 {{ "Year" | trans }}"{% if dayPast==-365%} selected="true"{% endif %}/>
    </item>
</toolbar>